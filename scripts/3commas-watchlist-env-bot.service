[Unit]
Description=3Commas Watchlist Daemon
After=multi-user.target

[Service]
# Set WorkingDirectory and ExecStart to your file paths accordingly
WorkingDirectory=/home/ron/3commas-cyber-bots
ExecStart=/home/ron/3commas-cyber-bots/.env/bin/python /home/ron/3commas-cyber-bots/watchlist.py
User=ron
Restart=on-failure

[Install]
WantedBy=default.target
